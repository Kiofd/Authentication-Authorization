<h2>Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="form-group col-md-4">
        <div>
            <label asp-for="Email">Enter Email</label><br />
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="PasswordConfirm">Confirm Password</label><br />
            <input asp-for="PasswordConfirm" class="form-control" />
            <span asp-validation-for="PasswordConfirm" /><br />
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>